# Uygulama Ayarları
APP_NAME=Document QA Service
APP_VERSION=1.0.0
DEBUG=False

# API Ayarları
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# Ollama Ayarları
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3
OLLAMA_TIMEOUT=120

# Embedding Ayarları
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Vektör Veritabanı Ayarları
VECTOR_DB_TYPE=faiss
VECTOR_DB_PATH=./data/vectordb

# Doküman İşleme Ayarları
DOCUMENTS_PATH=./data/documents
CHUNK_SIZE=500
CHUNK_OVERLAP=50
MAX_FILE_SIZE_MB=10

# RAG Ayarları
TOP_K_RESULTS=3
MIN_RELEVANCE_SCORE=0.5

# LLM Ayarları
MAX_TOKENS=512
TEMPERATURE=0.7
